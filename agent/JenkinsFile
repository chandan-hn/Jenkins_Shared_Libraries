pipeline {
    agent any

    parameters {
        booleanParam(name: 'CHECKOUT', defaultValue: true, description: 'Toggle this value')
        booleanParam(name: 'BUILD', defaultValue: true, description: 'Toggle this value')
        booleanParam(name: 'TEST', defaultValue: true, description: 'Toggle this value')
        booleanParam(name: 'DEPLOY', defaultValue: false, description: 'Toggle this value')
    }

    stages {
        stage('CheckOut') {
            when {
                expression {
                    params.CHECKOUT == true
                }
            }
            steps {
                checkout([$class: 'GitSCM', 
                branches: [[name: '*/master']],
                userRemoteConfigs: [[url: 'https://github.com/chandan-hn/Maven_Demo.git', credentialsId: 'github']]])
            }
        }

        stage('Build') {
            when {
                expression {
                    params.BUILD == true
                }
            }
            steps {
                sh '''
                mvn clean install        
                '''
                sh 'sleep 10'
                
            }
        }

        stage("Running multiple stages") {
        parallel {

        stage('Test1') {
            when {
                expression {
                    params.TEST == true
                }
            }
            steps {
                sh '''
                    #!/bin/bash
                    ps -ef
                    echo "------------Test 2 stage------------------"
                '''
                 sh 'sleep 10'
            }
        }

        stage('Test2') {
            when {
                expression {
                    params.TEST == true
                }
            }
            steps {
                sh '''
                    #!/bin/bash
                    ps -ef
                    echo "------------Test 2 stage------------------"
                '''
                 sh 'sleep 10'
            }
        }
    }
}
        stage('Deploy') {
            when {
                expression {
                    params.DEPLOY == true
                }
            }
            steps {
                
                sh '''
                    #!/bin/bash
                    ps -ef
                    echo "------------Test 2 stage------------------"
                '''
                 sh 'sleep 10'
            }
        }
    }
}
