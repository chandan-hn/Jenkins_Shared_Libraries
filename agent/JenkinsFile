pipeline {
    agent {
        label 'slave1'
    }

     triggers {
            cron('*/59 * * * *')
        }
    stages {
        stage('CheckOut') {
            steps {
                checkout([$class: 'GitSCM', 
                branches: [[name: '*/master']],
                userRemoteConfigs: [[url: 'https://github.com/chandan-hn/Maven_Demo.git', credentialsID: 'github']]])
            }
        }

        stage('Build') {
            steps {
                sh '''
                mvn clean install        
                '''
                sh 'sleep 10'
                
            }
        }

        stage('Test2') {
            steps {
                sh '''
                    #!/bin/bash
                    ps -ef
                    echo "------------Test 2 stage------------------"
                '''
                 sh 'sleep 10'
            }
        }
    }
}
